        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/book_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_shape"
                android:foregroundTint="@color/primary"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Icon -->
                <ImageView
                    android:id="@+id/categoryIcon3"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/baseline_menu_book_64"
                    android:tint="@color/white" />

                <!-- Category Name -->
                <TextView
                    android:id="@+id/categoryName3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Bücher"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/devices_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_shape"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Icon -->
                <ImageView
                    android:id="@+id/categoryIcon4"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/baseline_electrical_services_64"
                    app:tint="@color/white" />

                <!-- Category Name -->
                <TextView
                    android:id="@+id/categoryName4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Elektronik"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/clothes_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_shape"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Icon -->
                <ImageView
                    android:id="@+id/categoryIcon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/baseline_woman_24"
                    android:tint="@color/white" />

                <!-- Category Name -->
                <TextView
                    android:id="@+id/categoryName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Kleidung"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/food_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_shape"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Icon -->
                <ImageView
                    android:id="@+id/categoryIcon5"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/baseline_fastfood_64"
                    android:tint="@color/white" />

                <!-- Category Name -->
                <TextView
                    android:id="@+id/categoryName5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Essen"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/interior_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_shape"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Icon -->
                <ImageView
                    android:id="@+id/categoryIcon6"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/baseline_event_seat_64"
                    android:tint="@color/white" />

                <!-- Category Name -->
                <TextView
                    android:id="@+id/categoryName6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Möbel"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/miscs_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_shape"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Icon -->
                <ImageView
                    android:id="@+id/categoryIcon2"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:srcCompat="@android:drawable/ic_dialog_map"
                    android:tint="@color/white" />

                <!-- Category Name -->
                <TextView
                    android:id="@+id/categoryName2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Auf der Map anzeigen"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

            </LinearLayout>
        </LinearLayout>

        <ListView
            android:id="@+id/lv_searchResult"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- category_card.xml -->



    </LinearLayout>


</LinearLayout>