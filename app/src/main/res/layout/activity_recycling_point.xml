<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:orientation="vertical"
    tools:context=".RecyclingPoint">


    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:backgroundTint="@color/white"
        android:tint="@color/primary"
        app:srcCompat="@drawable/baseline_arrow_back_24" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:gravity="center"
        android:text="Hier kannst du deinen persönlichen Recycling Point registrieren. Danke, dass du dabei bist!"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="   " />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:gravity="center"
        android:text="Was möchtest Du in deinem RecyclingPoint ablegen?"
        android:textColor="@color/white"
        android:textSize="18dp" />

    <Spinner
        android:id="@+id/spinner1"
        style="@android:style/Widget.Material.Light.Spinner"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:dropDownSelector="@color/black"
        android:foregroundTint="@color/white"
        android:gravity="center"
        android:popupBackground="@color/white"
        android:scrollbarThumbHorizontal="@color/primary"
        android:spinnerMode="dropdown"
        tools:listfooter="@layout/spinner_item_layout"
        tools:listheader="@layout/spinner_item_layout"
        tools:listitem="@layout/spinner_item_layout" />

    <TextView
        android:id="@+id/textView43"
        android:layout_width="match_parent"
        android:layout_height="47dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView42"
            android:layout_width="378dp"
            android:layout_height="59dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Lade ein Bild von deinem RecyclingPoint hoch:"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:src="@drawable/baseline_photo_camera_24"
            android:tint="@color/primary" />
    </LinearLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:text="Jetzt RecyclingPoint aufstellen an meinem Standort"
        android:textColor="@color/primary" />

</LinearLayout>