<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:orientation="vertical">


    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal|center_vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <ImageView
            android:id="@+id/reg_user_tx"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/upimg"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Konto："
                android:id="@+id/konto"
                android:textSize="18dp"
                android:gravity="center_vertical"
                android:ellipsize="end"
                android:singleLine="true"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/edkonto"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Passwort："
                android:id="@+id/passwort"
                android:textSize="18dp"
                android:gravity="center_vertical"
                android:ellipsize="end"
                android:singleLine="true"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/edpasswort"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Telefonnummer："
                android:id="@+id/telefonnummer"
                android:textSize="18dp"
                android:gravity="center_vertical"
                android:ellipsize="end"
                android:singleLine="true"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/edtelefonnummer"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="EmailAddress："
                android:id="@+id/emailAddress"
                android:textSize="18dp"
                android:gravity="center_vertical"
                android:ellipsize="end"
                android:singleLine="true"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/edemailaddress"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Address："
                android:layout_weight="1"
                android:id="@+id/address"
                android:textSize="18dp"
                android:gravity="center_vertical"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:id="@+id/edaddress"/>
        </LinearLayout>

        <Button
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:text="Register"
            android:textSize="20dp"
            android:id="@+id/register1"
            android:layout_gravity="center"
            android:onClick="zhuce"/>
        <Button
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:text="Reisende"
            android:textSize="20dp"
            android:id="@+id/reisende1"
            android:layout_gravity="center"
            android:onClick="youke"/>
    </LinearLayout>
</LinearLayout>
